{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "filters"
        ],
        "excludePattern": "(node_modules|lib)"
    },
    "plugins": [
        "plugins/markdown",
        "./scripts/jsdoc-fix"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "applicationName": "PixiJS Filters",
        "footer": "Made with ♥ by Goodboy Digital (goodboydigital.com)",
        "copyright": "PixiJS Copyright © 2013-2017 Mat Groves.",
        "googleAnalytics": "UA-103772589-3",
        "meta": {
            "title": "PixiJS Filters Documentation",
            "description": "API Documentation for PixiJS filters",
            "keyword": "filters, webgl, ascii, bloom, convolution, cross-hatch, dotfilter, emboss, pixelate, shockwave, twist, tiltshift"
        },
        "linenums": true
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": false
    },
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "private": false,
        "lenient": true,
        "destination": "./docs",
        "template": "./node_modules/@pixi/jsdoc-template"
    }
}
