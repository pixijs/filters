{
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "clean:build": "rimraf filters/*/lib \"bundle/{lib,dist}\" tools/screenshots/dist",
    "preclean": "npm run clean:build",
    "clean": "lerna clean",
    "predeploy": "npm run docs",
    "test": "npm run build:prod",
    "deploy": "node deploy",
    "docs": "jsdoc -c jsdoc.conf.json -R README.md",
    "lint": "eslint *.js filters tools --ignore-path .gitignore --fix",
    "demo": "open http://localhost:8080/tools/demo/index.html && http-server . -s -c-1",
    "examples": "npm run demo",
    "prebuild": "npm run lint",
    "build": "npm run build:prod && npm run build:tools",
    "build:dev": "rollup -c",
    "build:prod": "rollup -c --prod",
    "build:tools": "lerna run build --scope @tools/*",
    "watch:tools": "lerna run watch --parallel --scope @tools/*",
    "watch": "rollup -cw",
    "lerna": "lerna",
    "prerelease": "npm run build",
    "release": "lerna publish",
    "postrelease": "npm run deploy"
  },
  "devDependencies": {
    "@pixi/jsdoc-template": "^2.2.0",
    "eslint": "^4.6.1",
    "gh-pages": "^0.11.0",
    "http-server": "^0.9.0",
    "jsdoc": "^3.4.0",
    "lerna": "^2.4.0",
    "magic-string": "^0.22.4",
    "minimist": "^1.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.0",
    "rollup-plugin-buble": "^0.16.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.0.25"
  }
}
