{
  "name": "pixi-filters-monorepo",
  "private": true,
  "scripts": {
    "start": "run-p watch watch:tools demo",
    "postinstall": "run-s bootstrap",
    "bootstrap": "lerna bootstrap --hoist --no-ci",
    "clean:build": "rimraf \"filters/*/dist\" \"bundle/dist\" tools/screenshots/dist",
    "preclean": "run-s clean:build",
    "clean": "lerna clean",
    "clean:types": "rimraf out/*",
    "copy:bundle": "copyfiles -f \"bundle/dist/*\" -e \"**/*.{cjs,esm}.*\" dist",
    "copy:filters": "copyfiles -f filters/*/dist/* -e \"**/*.{cjs,esm}.*\" dist/filters",
    "copy:screenshots": "copyfiles tools/screenshots/dist/* dist",
    "copy:demo": "copyfiles -f tools/demo/index.* dist/demo",
    "copy:demoimages": "copyfiles -f tools/demo/images/* dist/demo/images",
    "predist": "rimraf dist/*",
    "dist": "run-s build build:types docs copy:*",
    "predocs": "rimraf dist/docs/*",
    "docs": "webdoc -R README.md",
    "lint": "eslint --ext .js --ext .ts filters bundle --ignore-path .gitignore",
    "demo": "open http://localhost:8080/tools/demo/index.html && http-server . -s -c-1",
    "examples": "run-s demo",
    "prebuild": "run-s lint",
    "prebuild:types": "run-s clean:types",
    "build:types": "tsc && api-extractor-lerna-monorepo",
    "postbuild:types": "run-s clean:types",
    "build": "run-s build:prod build:tools",
    "build:dev": "rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:tools": "lerna run build --scope @tools/*",
    "watch:tools": "lerna run watch --parallel --scope @tools/*",
    "watch": "rollup -cw",
    "prerelease": "run-s build",
    "release": "lerna version --exact",
    "publish-ci": "lerna publish from-package --yes --no-verify-access"
  },
  "devDependencies": {
    "@lerna/batch-packages": "^3.13.0",
    "@lerna/filter-packages": "^3.13.0",
    "@lerna/project": "^3.13.1",
    "@microsoft/api-extractor": "^7.12.1",
    "@pixi-build-tools/api-extractor-lerna-monorepo": "^1.0.1",
    "@pixi/display": "^6.0.0-X",
    "@pixi/eslint-config": "^2.0.1",
    "@pixi/extract": "^6.0.0-X",
    "@pixi/jsdoc-template": "^2.5.1",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@webdoc/cli": "^1.1.4",
    "acorn": "^6.1.1",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^7.2.0",
    "http-server": "^0.11.1",
    "jsdoc": "^3.6.3",
    "lerna": "^3.13.4",
    "magic-string": "^0.25.2",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "pixi-webdoc-template": "^1.1.4",
    "rimraf": "^2.6.3",
    "rollup": "^2.35.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.0.3",
    "typescript": "^3.9.5"
  }
}
