{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "filters/*/src/**/*.ts",
            "bundle/src/*.ts"
        ]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "template": {
        "outputSourceFiles": true,
        "readme": "./README.md",
        "repository": "https://github.com/pixijs/filters/"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "applicationName": "PixiJS Filters",
        "footer": "Made with ♥ by PixiJS (pixijs.com)",
        "copyright": "PixiJS Copyright © 2013-2020 PixiJS.",
        "googleAnalytics": "UA-103772589-3",
        "meta": {
            "title": "PixiJS Filters Documentation",
            "description": "API Documentation for PixiJS filters",
            "keyword": "filters, webgl, ascii, bloom, convolution, cross-hatch, dotfilter, emboss, pixelate, shockwave, twist, tiltshift"
        },
        "linenums": true
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": false
    },
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "private": false,
        "lenient": true,
        "destination": "./dist/docs",
        "template": "@pixi/webdoc-template",
        "export": "./dist/docs/pixi-filters.api.json"
    }
}
