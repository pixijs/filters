{
    "compilerOptions": {
        "moduleResolution": "node",
        "allowJs": false,
        "target": "ES2017",
        "removeComments": false,
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "baseUrl": "./",
        "outDir": "./lib",
        "declaration": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**/lib/**",
        "**/test/**",
        "**/scripts/**",
        "**/types/**",
        "rollup.config.js"
    ],
    "include": [
        "src",
        "./global.d.ts"
    ]
}